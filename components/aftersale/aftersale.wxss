.aftersale-box {
  width: 702rpx;
  height: 330rpx;
  margin: 25rpx auto;
  border: 1rpx solid rgb(204, 204, 204);
  border-radius: 8rpx;
  padding-left: 22rpx;
}

.aftersale-top {
  display: flex;
  justify-content: space-around;
  align-items: center;
  line-height: 60rpx;
  margin-top: 20rpx;
}

.aftersale-left {
  line-height: 60rpx;
  margin-left: -43rpx;
}

.aftersale-item {
  font-size: 32rpx;
  color: rgb(255, 133, 82);
  margin-right: 20rpx;
}

.aftersale-car-id {
  display: inline-block;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #333;
  border-radius: 8rpx;
  border: 1rpx solid rgb(255, 133, 82);
  text-align: center;
  font-size: 25rpx;
}

.aftersale-right {
  font-size: 25rpx;
  color: rgb(255, 133, 82);
  margin-left: 215rpx;
}
.worker-info{
  display:flex;
  align-items:center;
}
.worker-info text{
  font-size: 28rpx;
  color: rgb(102, 102, 102);
  margin-top: 20rpx;
}
.worker-img {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.aftersale-time{
  font-size: 24rpx;
  color: rgb(204, 204, 204);
  line-height: 50rpx;

}
.aftersale-id{
   font-size: 24rpx;
  color: rgb(204, 204, 204);
  line-height: 50rpx;

}

.aftersale-footer{
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
  margin-top: 15rpx;
  color: rgb(204, 204, 204);

}
.order-sum{
  font-size: 25rpx;
  color: rgb(204, 204, 204);
  margin-right: 10rpx;
}
.money{
  font-size: 35rpx;
  color: rgb(102, 102, 102);
}
.order-again{
 margin-right: 40rpx;
 font-size: 28rpx;
 line-height: 60rpx;
 color: rgb(102, 102, 102);
}

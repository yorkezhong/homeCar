<view class="home">
  <view class='top'>
    <view class="city" wx:if="{{!selectCity}}">
      <view class='city-left' bindtap='selectCity'>
        <text class='city-name'>{{city}}</text>
        <text class="cuIcon-unfold"></text>
      </view>
      <view class='city-right'>
        <text class='city-tem'>{{weather}}</text>
      </view>
    </view>
  </view>
  <view class='banner'>
    <swiper autoplay="true" indicator-dots="true" indicator-color="#fff" indicator-active-color="#333">
      <block wx:for="{{banner}}" wx:key="{{index}}">
        <swiper-item>
          <image src="{{item.imgUrl}}" class="slide-image" mode='scaleToFill' style="width:100%" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class='shop'>
    <view class='shop-info'>
      <text class='shop-name'>{{currtshop.name}}</text>
      <text class='shop-people'>前方排队人数</text>
      <text class='people-num' bindtap='showMask'>—{{lineNum}}人</text>
      <button class='keysite' bindtap='goKey'>钥匙柜位置</button>
    </view>
    <text class='shop-time '>营业时间 {{currtshop.startTime}}-{{currtshop.endTime}}  </text>
    <view class='shop-site' bindtap='switchShop'>
      <image src='../../../img/repeat.png' style='width:40rpx;height:40rpx;margin-right:10rpx;'></image>
     <text class='currtshop'> {{currtshop.address}}</text> </view>
  </view>

  <view class='service'>
    <view class='service-item'>
      <image src='../../../img/cosmetology.png' mode='aspectFit'></image>
      <text>美容</text>
    </view>
    <view class='service-item'>
      <image src='../../../img/insurance.png' mode='aspectFit'></image>
      <text>车险</text>
    </view>
    <view class='service-item'>
      <image src='../../../img/paint.png' mode='aspectFit'></image>
      <text>喷漆</text>
    </view>
    <view class='service-item'>
      <image src='../../../img/vehicle_tube.png' mode='aspectFit'></image>
      <text>车管</text>
    </view>
  </view>

  <view class='hr'></view>
  <view class='order'>
    <view class='orderBy'>
      ----------------------------
    </view>
    <view class='order-stauts'>
      <view class='step'>
        <image src='../../../img/circular.png'></image>
        <text>下单</text>
        <text>9：00</text>
      </view>
      <view class='step'>
        <image src='../../../img/circular.png'></image>
        <text>交车</text>
        <text>10：00</text>
      </view>
      <view class='step step-repai'>
        <image src='../../../img/repai.png' class='repai' style='width:120rpx;height:120rpx'></image>
        <text>施工中</text>
        <text>11：00</text>
      </view>
      <view class='step'>
        <image src='../../../img/circular_gray.png'></image>
        <text>完工</text>
        <text>18：00</text>
      </view>
      <view class='step'>
        <image src='../../../img/circular_gray.png'></image>
        <text>交车</text>
        <text>19：00</text>
      </view>

    </view>
  </view>
  <view class='hr'></view>
  <view class='other'>
    <view class='other-left'>
      <image src='../../../img/car_wash.png' style='width:360rpx;height:180rpx;' mode='aspectFit' bindtap='goWashCar'></image>
    </view>
    <view class='other-right'>
      <image src='../../../img/recharge.png' style='width:230rpx;height:88rpx;' mode='aspectFit' bindtap='goRecharge'></image>
      <image src='../../../img/packge.png' style='width:230rpx;height:88rpx;' mode='aspectFit' bindtap='goPackage'></image>

    </view>
  </view>

  <view class='mask' wx:if="{{mask}}">
    <view class='mask-box'>
      <view class='mask-top'>洗车排队进度</view>
      <view class='mask-item' wx:for="{{[1,2,3,4]}}" wx:key="{{index}}">
        <view class='mask-worker'>
          <image src='https://pic.qqtn.com/up/2018-2/15195209116319273.jpg'></image>
          <view class='line-info'>
            <view class='worker-name'>波西米亚</view>
            <view class='line-num'>前面有4人</view>
          </view>
        </view>
        <view class='car-list'>
          <view class='line-list' wx:for="{{[1,2,3,4]}}" wx:key="{{index}}">
            <view class='car-id'>粤BKA454</view>
            <view class='time'>预计等待11分钟</view>
          </view>
        </view>
      </view>
    </view>
    <view class='close' bindtap='closeMask'>
      <image src='../../../img/close_popup.png'></image>
    </view>
  </view>

</view>
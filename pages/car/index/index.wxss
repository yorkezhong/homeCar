page{
  width: 100%;
  height: 100%;
  background: #fff;
}
.car-top{
  font-size: 32rpx;
  color: #333;
  margin-left: 20rpx;
  margin-bottom: 15rpx

}
.car-info{
  float: left;
  margin-left: 20rpx;
  margin-top: 25rpx;
  font-size: 32rpx;
  color: #333;
  display: flex;
  margin-right: 25rpx;
 align-items: center;
 align-self: center;

}
.car-id{
  border: 1rpx solid rgb(255, 84, 45);
 width: 200rpx; height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  text-align: center;
  color: #333;
  margin-left: 27rpx;
  position:relative;
  border-radius:8rpx;
  display: inline-block;
  margin:20rpx;


}
.car-id image{
  width: 40rpx;

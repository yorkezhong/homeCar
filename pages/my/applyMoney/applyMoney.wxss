page {
  width: 100%;
  height: 100%;
  background: #fff;
}

.apply {
 display: flex;
  flex-direction: column;
  width: 100%;
  height:100%;
}
.main{
  flex: 1;
  position: relative;
  margin-bottom: 0rpx;
}
.apply-list {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  height: 220rpx;
  margin-top: 90rpx;
  margin-bottom: 30rpx;
}

.apply-select {
  width: 40rpx;
  height: 40rpx;
  border: 1rpx solid rgb(255, 133, 83);
  border-radius: 50%;
}

.apply-info {
  margin-left: 40rpx;
  height: 280rpx;
  width: 590rpx;
  border: 1rpx solid rgb(204, 204, 204);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx 22rpx;
  margin-bottom: 40rpx;
  position: relative;
}

.apply-info-top {
  display: flex;
  align-items: center;
}

.apply-item {
  font-size: 28rpx;
  color: rgb(10, 138, 254);
  display: block;
}

.apply-car-id {
  width: 180rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #333;
  text-align: center;
  border: 1rpx solid rgb(10, 138, 254);
  border-radius: 8rpx;
  margin-left: 20rpx;
  display: block;
  font-size: 22rpx;
}

.apply-worker {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.worker-name {
  font-size: 24rpx;
  color: #333;
}

.worker-phone {
  font-size: 24rpx;
  color: #333;
  margin-left: 30rpx;
}

.order-time {
  font-size: 22rpx;
  color: rgb(204, 204, 204);
  line-height: 40rpx;
}

.order-id {
  font-size: 22rpx;
  color: rgb(204, 204, 204);
  line-height: 40rpx;
}

.order-sum {
  position: absolute;
  bottom: 22rpx;
  right: 25rpx;
  display: flex;
  align-items: center;
}

.order-sum-title {
  font-size: 22rpx;
  color: rgb(204, 204, 204);
}

.rmb {
  color: #333;
  font-size: 22rpx;
  display: block;
  margin-left: 10rpx;
}

.money {
  font-size: 36rpx;
  color: #333;
}

.footer {
  display: flex;
 flex: 0 0 100rpx;
}

.footer-all {
  width: 50%;
  border-top: 1rpx solid rgb(204, 204, 204);
  height: 100%;
  color: rgb(10, 138, 254);
  line-height: 100rpx;
  text-align: center;

}

.footer-submit {
  width: 50%;
  background: rgb(10, 138, 254);
  color: #fff;
  line-height: 100rpx;
  text-align: center;
}
.selected{
  background: rgb(255, 133, 83);
}
.selected-apply{
  border-color:rgb(255, 133, 83) !important; 
}

.dontall{
  background: rgb(255, 133, 83) !important;
    color: #fff !important;
}